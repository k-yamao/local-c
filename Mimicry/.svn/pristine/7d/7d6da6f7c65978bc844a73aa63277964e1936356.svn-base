<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:id="@+id/ScrollView"
		android:layout_height="fill_parent" android:layout_width="fill_parent">

		<LinearLayout
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@drawable/bgcolor">


			<LinearLayout android:id="@+id/Layout_row"
				android:orientation="vertical" android:layout_margin="5dp"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:background="@drawable/white">

				<LinearLayout android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="100dp">

					<ImageView android:id="@+id/imageView"
						android:layout_height="80dp" android:layout_width="80dp"
						android:layout_margin="10dp"></ImageView>

					<LinearLayout android:id="@+id/linearLayout_v1"
						android:orientation="vertical" android:layout_height="100dp"
						android:layout_margin="5dp" android:layout_width="fill_parent">

						<TextView android:id="@+id/title" android:layout_width="wrap_content"
							android:layout_height="30dp" style="@style/mimicryrow1"></TextView>

						<LinearLayout android:id="@+id/linearLayout_h2"
							android:orientation="horizontal" android:layout_height="30dp"
							android:layout_width="wrap_content">

							<TextView android:text="@string/chage_level_txet" style="@style/mimicryrow2"
								android:id="@+id/change_level_txet"
								android:layout_width="0dp" android:layout_weight="1"
								android:layout_height="30dp"></TextView>

							<TextView android:id="@+id/change_level" style="@style/mimicryrow3"
								android:layout_width="0dp" android:layout_weight="1"
								android:layout_height="30dp"></TextView>

						</LinearLayout>
						<LinearLayout android:id="@+id/linearLayout_h3"
							android:orientation="horizontal" android:layout_height="30dp"
							android:layout_width="wrap_content">

							<TextView android:text="@string/rating_txet" android:id="@+id/rating_txet"
								style="@style/mimicryrow2" android:layout_width="fill_parent"
								android:layout_height="30dp"></TextView>

							<TextView android:id="@+id/rating" style="@style/mimicryrow3"
								android:layout_width="wrap_content" android:layout_height="30dp"></TextView>

						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:orientation="vertical" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_margin="10dp">

					<TextView android:text="@string/old_standby_text"
						android:id="@+id/old_standby_text" style="@style/mimicryrow2"
						android:layout_width="fill_parent" android:layout_height="40dp"
						android:background="@drawable/midashi" android:layout_margin="2dp"
						android:padding="5dp"></TextView>

					<TextView android:id="@+id/old_standby" style="@style/mimicryrow2"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"></TextView>

				</LinearLayout>
				<LinearLayout
					android:orientation="vertical" android:layout_width="fill_parent"
					android:layout_height="100dp" android:layout_margin="10dp">

				    <Button android:id="@+id/video_btn" android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_margin="10dp"
                        android:onClick="onVideo" android:text="@string/video_btn_text">
                    </Button>




				</LinearLayout>
				<LinearLayout
					android:orientation="horizontal" android:layout_width="fill_parent"
					android:layout_height="60dp" android:layout_margin="5dp">

					<ImageView android:id="@+id/rec" android:layout_height="50dp"
						android:layout_width="50dp" android:layout_weight="1"
						android:layout_margin="10dp" android:src="@drawable/rec_btn"
						android:onClick="onClickRecord"></ImageView>

					<ImageView android:id="@+id/play" android:layout_height="50dp"
						android:layout_width="50dp" android:layout_weight="1"
						android:layout_margin="10dp" android:src="@drawable/play_btn"
						android:onClick="onClickPlaying"></ImageView>
					<ImageView android:id="@+id/save" android:layout_height="50dp"
						android:layout_width="50dp" android:layout_weight="1"
						android:layout_margin="10dp" android:src="@drawable/save_btn"
						android:onClick="onClickSave"></ImageView>
					<ImageView android:id="@+id/sns" android:layout_height="50dp"
						android:layout_width="50dp" android:layout_weight="1"
						android:layout_margin="10dp" android:src="@drawable/facebook"
						android:onClick="onFacebookShare"></ImageView>


				</LinearLayout>
				<Button android:id="@+id/cansel_btn" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_margin="10dp"
					android:onClick="onCansel" android:text="@string/back_text">
				</Button>
			</LinearLayout>
		</LinearLayout>



	</ScrollView>
</LinearLayout>
