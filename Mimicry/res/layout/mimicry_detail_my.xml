<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/bgcolormy">

	<LinearLayout android:id="@+id/Layout_row"
		android:orientation="vertical" android:layout_margin="5dp"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/white">

		<LinearLayout
			android:layout_width="fill_parent" android:layout_height="100dp"
			android:orientation="horizontal">

			<ImageView android:id="@+id/imageView"
				android:layout_width="80dp" android:layout_height="80dp"
				android:layout_margin="10dp">
			</ImageView>

			<LinearLayout android:id="@+id/linearLayout_v1"
				android:layout_width="fill_parent" android:layout_height="100dp"
				android:layout_margin="5dp" android:orientation="vertical">


                <TextView android:id="@+id/title_text" style="@style/mimicryrow6"
                    android:layout_width="wrap_content" android:layout_height="12dp"
                    android:text="@string/title_text">
                </TextView>

				<TextView android:id="@+id/title" style="@style/mimicryrow1"
					android:layout_width="wrap_content" android:layout_height="30dp">
				</TextView>

				<TextView android:id="@+id/save_date_txet" style="@style/mimicryrow6"
					android:layout_width="wrap_content" android:layout_height="20dp"
					android:text="@string/save_date_text">
				</TextView>

				<TextView android:id="@+id/save_date" style="@style/mimicryrow5"
					android:layout_width="wrap_content" android:layout_height="20dp">
				</TextView>
			</LinearLayout>

			<LinearLayout android:id="@+id/linearLayout_h3"
				android:layout_width="wrap_content" android:layout_height="30dp"
				android:orientation="horizontal">

				<TextView android:id="@+id/rating" style="@style/mimicryrow3"
					android:layout_width="wrap_content" android:layout_height="30dp">
				</TextView>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent" android:layout_height="100dp"
			android:layout_margin="15dp" android:orientation="horizontal">

			<ImageView android:id="@+id/play" android:layout_width="0dp"
				android:layout_height="50dp" android:layout_margin="10dp"
				android:layout_weight="1" android:onClick="onClickPlaying"
				android:src="@drawable/play_btn">
			</ImageView>
			<ImageView android:id="@+id/sns" android:layout_width="0dp"
                android:layout_height="50dp" android:layout_margin="10dp"
                android:layout_weight="1" android:onClick="onMimicry" android:src="@drawable/mimicry_btn">
            </ImageView>
			<ImageView android:id="@+id/sns" android:layout_width="0dp"
				android:layout_height="50dp" android:layout_margin="10dp"
				android:layout_weight="1" android:onClick="onFacebookShare"
				android:src="@drawable/facebook">
			</ImageView>
			<ImageView android:id="@+id/sns" android:layout_width="0dp"
				android:layout_height="50dp" android:layout_margin="10dp"
				android:layout_weight="1" android:onClick="onShare" android:src="@drawable/share_btn">
			</ImageView>
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="100dp" android:orientation="horizontal">

			<Button android:id="@+id/cansel_btn" android:layout_width="0dp"
				android:layout_height="50dp" android:layout_margin="10dp"
				android:layout_weight="1" android:onClick="onBack" android:text="@string/back_text">
			</Button>

			<Button android:id="@+id/contribution_btn"
				android:layout_width="0dp" android:layout_height="50dp"
				android:layout_margin="10dp" android:layout_weight="1"
				android:onClick="onDelete" android:text="@string/delete_text">
			</Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>