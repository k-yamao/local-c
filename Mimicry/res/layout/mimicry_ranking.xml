<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/white">
		<TextView android:id="@+id/listtitle" android:layout_width="fill_parent"
			android:layout_height="50dp" style="@style/mtitle" />
		<Button android:id="@android:id/button1" android:text="@string/update_btn"
            android:layout_width="fill_parent" android:layout_height="50dp"
            android:layout_margin="10dp" android:onClick="onUpdate" />
		<ListView android:id="@android:id/list" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:listSelector="@drawable/listview_selecter"
			android:scrollbars="none" android:scrollbarStyle="outsideOverlay"
			android:drawSelectorOnTop="false" />
		<TextView android:id="@android:id/empty"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/empty" />

</LinearLayout>
